<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/item_toolbar" />

    <RelativeLayout
        android:id="@+id/rl_ringtone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true">

        <TextView
            android:id="@+id/tv_ringtone_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提醒铃声"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_ringtone_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_ringtone_title"
            android:text="清脆的鸟叫"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="?android:listChoiceBackgroundIndicator"
            android:src="@drawable/ic_keyboard_arrow_right_24dp" />

        <View
            android:clickable="false"
            android:focusableInTouchMode="false"
            android:layout_width="wrap_content"
            android:layout_height="1.0px"
            android:layout_below="@id/tv_ringtone_content"
            android:layout_marginTop="5dp"
            android:background="@color/colorDividerGray" />
    </RelativeLayout>

</LinearLayout>
